<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="#d3d3d3"/>
                    <stroke
                        android:width="2dp"
                        android:color="#000000" />
                    <corners
                        android:radius="4dp" />
                    <padding
                        android:left="2dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp" />
                </shape>
            </item>
            <item
                android:top="16dp"
                android:right="15dp">
                <bitmap android:src="@drawable/down_arrow_1"
                    android:gravity="top|right" />
            </item>
            <item
                android:top="9dp"
                android:left="12dp">
                <bitmap android:src="@drawable/walking_32"
                    android:gravity="top|left"
                    android:color="#000000" />
            </item>
        </layer-list>
    </item>
</selector>